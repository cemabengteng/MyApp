<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="commen_shadow_tv_style">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowColor">#7f000000</item>
        <item name="android:shadowDx">-1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>

    </style>

    <declare-styleable name="HeartWaveView">
        <attr name="progressWidth" format="dimension" />
        <attr name="progress_padding" format="dimension" />
        <attr name="fontSize" format="dimension" />
        <attr name="progressColor" format="color" />
        <attr name="progressBgColor" format="color" />
        <attr name="waterWaveColor" format="color" />
        <attr name="waterWaveBgColor" format="color" />
        <attr name="progress2WaterWidth" format="dimension" />
        <attr name="showProgress" format="boolean" />
        <attr name="showNumerical" format="boolean" />
        <attr name="textColor" format="color" />
        <attr name="progress" format="integer" />
        <attr name="waveTime" format="integer" />
    </declare-styleable>

    <!--飘心-->
    <declare-styleable name="HeartLayout">
        <attr name="initX" format="dimension" />
        <attr name="initY" format="dimension" />
        <attr name="xRand" format="dimension" />
        <attr name="animLengthRand" format="dimension" />
        <attr name="xPointFactor" format="dimension" />
        <attr name="animLength" format="dimension" />
        <attr name="heart_width" format="dimension" />
        <attr name="heart_height" format="dimension" />
        <attr name="bezierFactor" format="integer" />
        <attr name="anim_duration" format="integer" />
    </declare-styleable>


    <style name="default_tab_img_style">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
    </style>

    <style name="default_tab_txt_style">
        <item name="android:textSize">12sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
    </style>
</resources>